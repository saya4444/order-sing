<!-- app/views/lists/edit.html.erb -->
<%= form_with(model: @list, local: true) do |form| %>
  <div class="field">
    <%= form.label :list_title, "リスト名" %>
    <%= form.text_field :list_title %>
  </div>

  <div class="field">
    <%= form.label :description, "リストの説明" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.check_box :public %>
    <%= form.label :public, '公開' %>
  </div>

  <div class="actions">
    <%= form.submit '更新' %>
  </div>
<% end %>

<%= link_to '戻る', lists_path %>
